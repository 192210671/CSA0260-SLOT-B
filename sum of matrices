#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i,j,m,n;
    int a[10][10],b[10][10],c[10][10];

    printf("enter the no of rows ....");

    scanf("%d",&m);
    printf("enter the no of columns....");
    scanf("%d",&n);

    printf("enter the elemnts for matrix A...\n");

    for(i=0;i<m;i++)

        for(j=0;j<n;j++)

            scanf("%2d",&a[i][j]);



    printf("enter the elements for matrix B...\n");

    for(i=0;i<m;i++)

        for(j=0;j<n;j++)

            scanf("%d",&b[i][j]);


printf("sum of two matrices is ....\n");
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            c[i][j]=a[i][j]+b[i][j];

            printf(" %2d",c[i][j]);

        }
        printf("\n");

    }



    return 0;

}
